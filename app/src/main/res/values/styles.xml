<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--  TextAppearance Primary -->
    <style name="TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_family</item>
    </style>

    <!--TextAppearance.Heading-->
    <style name="TextAppearance.Heading1">
        <item name="android:textSize">44sp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:fontFamily">@font/montserrat_extra_bold</item>
    </style>

    <style name="TextAppearance.Heading2">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:fontFamily">@font/montserrat_extra_bold</item>
    </style>

    <style name="TextAppearance.Heading3">
        <item name="android:textSize">27sp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:fontFamily">@font/montserrat_extra_bold</item>
    </style>

    <style name="TextAppearance.Heading4">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:fontFamily">@font/montserrat_extra_bold</item>
    </style>

    <style name="TextAppearance.Heading5">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:fontFamily">@font/montserrat_extra_bold</item>
    </style>

    <!--TextAppearance.Subtitle-->
    <style name="TextAppearance.Subtitle1">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/color_black_800</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.Subtitle2">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/color_black_800</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <!--TextAppearance.Paragraph-->
    <style name="TextAppearance.Paragraph">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_black_800</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

</resources>