<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/avatar_card_layout"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    tools:background="@drawable/card_view_avatar">

    <ImageView
        android:id="@+id/iv_avatar_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:paddingStart="@dimen/dimen_small"
        android:paddingTop="@dimen/dimen_big"
        android:paddingEnd="@dimen/dimen_small"
        android:src="@drawable/avatar_color_4" />

    <TextView
        android:id="@+id/avatar_username"
        style="@style/TextAppearance.Heading4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/dimen_big"
        android:text="User"
        app:layout_constraintLeft_toRightOf="@+id/iv_avatar_icon" />

    <TextView
        android:id="@+id/avatar_username_job"
        style="@style/TextAppearance.Paragraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/dimen_smallest"
        android:text="Job"
        app:layout_constraintLeft_toRightOf="@+id/iv_avatar_icon"
        app:layout_constraintTop_toBottomOf="@+id/avatar_username" />

    <Button
        android:id="@+id/follow_button"
        style="@style/TextAppearance.Subtitle4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_medium"
        android:contentDescription="@string/follow_button"
        android:text="@string/follow_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>