<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@drawable/button_progress_state_secundary">

    <TextView
        android:id="@+id/text_secondary_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        style="@style/TextAppearance.Heading5"
        android:textColor="@color/color_white"
        android:text="Button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/iv_chevron_right_secondary"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:gravity="center"
        app:srcCompat="@drawable/chevron_right"
        app:layout_constraintLeft_toRightOf="@+id/text_secondary_button"
        tools:ignore="MissingConstraints"
        app:tint="@color/color_white" />

</androidx.constraintlayout.widget.ConstraintLayout>